<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net5.0</TargetFramework>
        <LangVersion>9</LangVersion>
        <IsPackable>true</IsPackable>
        <PackAsTool>true</PackAsTool>
        <AssemblyName>udptoolkit-cli</AssemblyName>
        <ToolCommandName>udptoolkit-cli</ToolCommandName>

        <PackageId>UdpToolkit.CodeGeneratorCli</PackageId>
        <Title>UdpToolkit CodeGenerator Cli</Title>
        <Description>UdpToolkit tooling for code generation.</Description>
        <PackageTags>UdpToolkit;Serialization;Serializer;Unity</PackageTags>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="CommandLineParser" Version="2.8.0" />
        <PackageReference Include="Microsoft.Build.Locator" Version="1.4.1" />
        <PackageReference Include="Microsoft.Build.Framework" Version="16.5.0" ExcludeAssets="runtime" />
        <PackageReference Include="Microsoft.Build" Version="16.5.0" ExcludeAssets="runtime" />
        <PackageReference Include="Microsoft.CodeAnalysis.Workspaces.MSBuild" Version="3.8.0" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\UdpToolkit.CodeGenerator\UdpToolkit.CodeGenerator.csproj" />
    </ItemGroup>
    
</Project>